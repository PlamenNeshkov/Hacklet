                      </a>
                    </li>
                    <% if post.tag_list.count > 0 %>
                      <li>
                        <i class="fa fa-folder-open-o"></i>
                        <% post.tag_list.each do |tag| %>
                          <%= link_to blog.tagged_blog_posts_path(tag), class: "category" do %>
                            <span class="font-lato"><%= tag %></span>
                          <% end %>
                        <% end %>
                      </li>
                    <% end %>
                  </ul>
