  <section id="news">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-lg-push-0 col-md-push-0 col-sm-push-0">
          <h2>Latest news</h2>
          <% latest_posts.each do |post| %>
            <div class="inews-item">
              <!--<a class="inews-thumbnail" href="#">
