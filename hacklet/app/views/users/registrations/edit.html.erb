<%= render 'breadcrumbs' %>

<% if devise_mapping.confirmable? && current_user.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= current_user.unconfirmed_email %></div>
<% end %>

<section>
  <div class="container">
    <div class="col-lg-9 col-md-9 col-sm-8 col-lg-push-3 col-md-push-3 col-sm-push-4 margin-bottom-80">
      <ul class="nav nav-tabs nav-top-border">
        <li class="active">
          <%= link_to 'General', user_settings_path(current_user) %>
        </li>
        <li>
          <%= link_to 'Avatar', user_avatar_path(current_user) %>
        </li>
      </ul>
      <div class="tab-content margin-top-20">
        <div class="tab-pane fade in active" id="info">
          <%= form_for resource, as: resource_name,
              url: registration_path(resource_name), html: { method: :put } do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :email, class: 'control-label' %><br />
              <%= f.email_field :email, autofocus: true,
                placeholder: @user.email, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :current_password, class: 'control-label' %><br />
              <%= f.password_field :current_password, autocomplete: "off",
                class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: 'control-label' %><br />
              <%= f.password_field :password, autocomplete: 'off',
                class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: 'control-label'  %><br />
              <%= f.password_field :password_confirmation,
                autocomplete: 'off', class: 'form-control' %>
            </div>

            <hr />

            <div class="form-group">
              <%= f.label 'About', class: 'control-label' %><br />
              <%= f.text_area :about_text, rows: 3,
                placeholder: @user.about_text, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label 'Site URL', class: 'control-label' %><br />
              <%= f.text_field :site_url, placeholder: @user.site_url,
                class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label 'Facebook URL', class: 'control-label' %><br />
              <%= f.text_field :facebook_url, autofocus: true,
                placeholder: @user.facebook_url, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label 'Twitter URL', class: 'control-label' %><br />
              <%= f.text_field :twitter_url, autofocus: true,
                placeholder: @user.twitter_url, class: 'form-control' %>
            </div>

            <div class="margin-top10">
              <%= f.button class: 'btn btn-primary', type: 'submit' do %>
                <i class="fa fa-check"></i> Update
              <% end %>
              <%= link_to "Back", :back, class: 'btn btn-default' %>
            </div>
          <% end %>
          <hr />
          <p>
            <%= button_to "Cancel my account",
            registration_path(resource_name), class: 'btn btn-danger',
            data: { confirm: "Are you sure?" }, method: :delete %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-4 col-lg-pull-9 col-md-pull-9 col-sm-pull-8">
      <%= render 'left_sidebar' %>
    </div>
  </div>
</section>
