<section class="page-header page-header-xs">
  <div class="container">
    <ol class="breadcrumb breadcrumb-inverse">
      <li><a href="/">Home</a></li>
      <li class="active"><a href="/projects">Projects</a></li>
    </ol>
  </div>
</section>

<p id="notice"><%= notice %></p>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-9 col-sm-9">
        <% @projects.each do |project| %>
          <%# if project.submitted %>
            <div class="row">
              <div class="col-md-2">
                <img src="assets/images/demo/brands/1.jpg" class="img-responsive" alt="company logo">
              </div>
              <div class="col-md-10">
                <h4 class="margin-bottom-10"><%= project.name %></h4>
                <ul class="list-inline">
                  <li><i class="fa fa-globe"></i> <a class="text-success" href="#"><%= project.repository_url %></a></li>
                  <li><i class="fa fa-users"></i> <%= link_to project.team.name, team_path(project.team) %></li>
                </ul>
                <p><%= project.description %></p>
              </div>
            </div>
          <hr />
        <% end %>
      </div>
    </div>
  </div>
</section>

<%#= link_to 'Show', project %>
<%#= link_to 'Edit', edit_project_path(project) %>
<%#= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
