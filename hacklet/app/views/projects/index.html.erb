<section class="page-header page-header-xs">
  <div class="container">
    <ol class="breadcrumb breadcrumb-inverse">
      <li><a href="/">Home</a></li>
      <li class="active"><a href="/projects">Projects</a></li>
    </ol>
  </div>
</section>

<p id="notice"><%= notice %></p>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-9 col-sm-9">
        <% if @projects.empty? %>
          <div class="alert alert-bordered-dotted margin-bottom-30"><!-- DOTTED --></span>
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><strong>No submitted projects found</strong></h4>
            <p>Either there's a hackathon running and no one submitted their projects or the system has been reset.</p>
          </div>
        <% end %>

        <% @projects.each do |project| %>
            <div class="row">
              <div class="col-md-2">
                <%= image_tag project.image_url.to_s, class: 'img-responsive', alt: 'Project image' %>
              </div>
              <div class="col-md-10">
                <h4 class="margin-bottom-10"><%= project.name %></h4>
                <ul class="list-inline">
                  <li><i class="fa fa-globe"></i> <a class="text-success" href="#"><%= project.repository_url %></a></li>
                  <li><i class="fa fa-users"></i> <%= link_to project.team.name, team_path(project.team) %></li>
                </ul>
                <p><%= project.description %></p>
              </div>
            </div>
            <% if project != @projects.last %>
              <hr />
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<%#= link_to 'Show', project %>
<%#= link_to 'Edit', edit_project_path(project) %>
<%#= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
