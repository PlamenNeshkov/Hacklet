<%= form_for @issue, html: {class: 'sky-form boxed'} do |f| %>
  <header class="size-18 margin-bottom-20">
    <% if controller.action_name == 'new' %>
      New issue
    <% elsif controller.action_name == 'edit' %>
      Edit issue
    <% end %>
  </header>
  <fieldset class="nomargin">
    <% if @issue.errors.any? %>
      <p><%= pluralize(@team.errors.count, "error") %> occurred:</p>
      <ul>
        <% @team.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <label class="input margin-bottom-10">
      <i class="ico-append fa fa-ticket"></i>
      <%= f.text_field :title, autofocus: true, placeholder: 'Title', required: true %>
      <b class="tooltip tooltip-bottom-right">The title of your problem, be concise</b>
    </label>
    <label class="input margin-bottom-10">
      <i class="ico-append fa fa-ticket"></i>
      <%= f.text_area :description, class: 'form-control', placeholder: 'Description', required: true %>
      <b class="tooltip tooltip-bottom-right">Description of your problem</b>
    </label>
  </fieldset>
  <footer>
    <%= link_to issues_path, class: 'btn btn-danger noradius pull-right' do %>
      <i class="fa fa-ban"></i> Cancel
    <% end %>
    <%= f.button type: 'submit', class: 'btn btn-primary noradius pull-right' do %>
      <% if controller.action_name == 'new' %>
        <i class="fa fa-check"></i> Create
      <% elsif controller.action_name == 'edit' %>
        <i class="fa fa-check"></i> Submit
      <% end %>
    <% end %>
  </footer>
<% end %>
