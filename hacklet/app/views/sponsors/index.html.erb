<section class="page-header page-header-xs">
  <div class="container">
    <ol class="breadcrumb breadcrumb-inverse">
      <li><a href="/">Home</a></li>
      <li><a href="/sponsors">Sponsors</a></li>
    </ol>
  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-9 col-sm-9">
        <div></span>
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><strong>Want to become a <strong>sponsor</strong>?</strong></h4>
          <p>Use the button to send us an email with your information. By becoming a sponsor, you help in improving the Bulgarian IT industry!</p>
          <button id="btn-mail" class="btn btn-primary">Become a sponsor</button>
        </div>
        <hr>
        <% if @sponsors.empty? %>
          <div class="alert alert-bordered-dotted margin-bottom-30"></span>
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4><strong>No sponsors yet!</strong></h4>
          </div>
        <% else %>
          <% @sponsors.each do |sponsor| %>
            <div class="row">
              <div class="col-md-2">
                <%= image_tag sponsor.image_url.to_s, class: 'img-responsive', alt: 'Company logo' %>
              </div>
              <div class="col-md-10">
                <h4 class="margin-bottom-10"><%= sponsor.name %></h4>
                <ul class="list-inline">
                  <li><i class="fa fa-globe text-success"></i> <a class="text-success" href="<%= sponsor.site_url %>"><%= sponsor.site_url %></a></li>
                </ul>
                <p><%= sponsor.description %></p>
              </div>
            </div>
            <% if sponsor != @sponsors.last %>
              <hr />
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<% content_for :javascript_includes do %>
  <%= javascript_include_tag "forms.js" %>
<% end %>
