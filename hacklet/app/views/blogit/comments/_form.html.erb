<%= form_for [post, comment], remote: blogit_conf.ajax_comments,
  html: { class: "blogit_form" } do |f| -%>

  <h4 class="page-header size-20 margin-bottom-60 margin-top-100">
    <%# t :leave_a_comment, scope: 'blogit.comments' %>
    LEAVE A <span>COMMENT</span>
  </h4>

  <%= field class: "hidden" do %>
    <%= f.label :nickname, "Nickname (Hide me using CSS)", 
      class: "blogit_form__label" %>
    <%= f.text_field :nickname, class: "blogit_form__field" %>
  <% end %>

  <div class="row">
    <div class="form-group">
      <div class="col-md-4">
        <%= field do %>
          <%= f.label :name, t(:name, scope: 'blogit.comments') %>
          <%= f.text_field :name, class: "form-control input-lg", required: true  %>
          <%= errors_on(comment, :name) %>
        <% end %>
      </div>

      <div class="col-md-4">
        <%= field do %>
          <%= f.label :email, t(:email_never_displayed, scope: 'blogit.comments') %>
          <%= f.email_field :email, class: "form-control input-lg", required: true %>
          <%= errors_on(comment, :email) %>
        <% end %>
      </div>

      <div class="col-md-4">
        <%= field do %>
          <%= f.label :website, t(:your_website, scope: 'blogit.comments') %>
          <%= f.url_field :website, class: "form-control input-lg" %>
          <%= errors_on(comment, :website) %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <div class="col-md-12">
        <%= field do %>
          <label>COMMENT</label>
          <%# f.label :body, t(:your_comment, scope: 'blogit.comments') %>
          <%= f.text_area :body, required: true, rows: 5, class: "form-control" %>
          <%= errors_on(comment, :body) %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <%= actions do %>
      <div class="col-md-12">
        <%= f.button type: 'submit', class: 'btn btn-3d btn-lg btn-reveal btn-black',
          disable_with: t(:adding_comment, scope: 'blogit.comments') do %>
            <i class="fa fa-check"></i>
            <span>
              <%= t(:add_comment, scope: 'blogit.comments') %>
            </span>
        <% end %>
      </div>
    <% end %>
  </div>
<% end -%>
