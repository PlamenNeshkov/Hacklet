<section class="page-header page-header-xs">
  <div class="container">
    <ol class="breadcrumb breadcrumb-inverse">
      <li><a href="/">Blog</a></li>
      <li class="<%= 'active' if params[:tag] == nil %>"><a href="/blog">Posts</a></li>
      <% if params[:tag] %>
        <li class="active"><%= params[:tag] %></li>
      <% end %>
    </ol>
  </div>
</section>

<section>
  <div class="container">
    <% if @posts.any? %>
      <%= render partial: "blogit/posts/post",
        collection: @posts,
        locals: {
          show_comments_count: (Blogit.configuration.include_comments == :active_records) 
        }  %>
    <% else %>
      <div class="alert alert-bordered-dotted margin-bottom-30"><!-- DOTTED --></span>
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4><strong>No posts found</strong></h4>
        <p>Stay tuned, there may be some new posts soon.</p>
      </div>
    <% end %>

    <%= paginate(@posts) %>
  </div>
</section>
